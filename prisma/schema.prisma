// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tag {
  id                      Int             @id @default(autoincrement()) @db.UnsignedInt
  name                    String          @unique
  path                    String
  type                    TagType         @default(STANDARD)

  @@index([path])

  @@map("tags")
}

enum TagType {
  STANDARD
  MARKETCAP
}
